
<h1>Listing posts</h1>
<% @posts.each do |post| %>
    
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
    <p><%= link_to 'Show', post %></p>
    <p><%= link_to 'Edit', edit_post_path(post) %></p>
    <p><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %>
    <br>
    
<% end %>

<%= link_to 'New Post', new_post_path %>